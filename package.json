{
  "name": "gulp-test-rigging",
  "version": "0.1.1",
  "description": "Defines a set of Gulp tasks for running unit tests, code-coverage reports, and linting.",
  "main": "gulp-test-rigging.js",
  "author": {
    "name": "Ben Whatley"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darklordzw/gulp-test-rigging.git"
  },
  "keywords": [
    "gulp",
    "mocha",
    "xo",
    "test"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darklordzw/gulp-test-rigging/issues"
  },
  "homepage": "https://github.com/darklordzw/gulp-test-rigging#readme",
  "files": [
    "gulp-test-rigging.js",
    "postinstall.js"
  ],
  "scripts": {
    "postinstall": "node ./postinstall.js"
  },
  "dependencies": {
    "gulp": "^3.9.1",
    "gulp-istanbul": "^1.1.2",
    "gulp-load-plugins": "^1.5.0",
    "gulp-mocha": "^4.3.1",
    "gulp-xo": "^0.16.0",
    "lodash.defaults": "^4.2.0",
    "mkdirp": "^0.5.1",
    "mocha-jenkins-reporter": "^0.3.9",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [
      "node",
      "mocha"
    ],
    "rules": {
      "linebreak-style": "off",
      "unicode-bom": "off",
      "arrow-parens": [
        "error",
        "always"
      ],
      "import/no-unresolved": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "unicorn/no-process-exit": "off"
    }
  }
}
